<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@mipmap/welcome"
    tools:context="com.app.medibox.UI.MainActivity">

    <Button
        android:id="@+id/btn_register"
        android:layout_alignParentBottom="true"
        android:layout_width="550px"
        android:layout_height="148px"
        android:layout_marginBottom="471px"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/buttonstyleblack"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="注册"
        android:textColor="#846ff1"
        android:textSize="22sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="170dp"
        android:textColor="#fff"
        android:text="已经有MediBox账户了？"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        />
    <Button
        android:id="@+id/btn_login"
        android:layout_alignParentBottom="true"
        android:layout_width="550px"
        android:layout_height="148px"
        android:layout_marginBottom="220px"

        android:background="@drawable/buttonstyle"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="登录"
        android:textColor="#fcfcfc"
        android:textSize="22sp" />


</RelativeLayout>
